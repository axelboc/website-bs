extends ../layout.pug

block content
  #thank-you.success
    .success__message
      p!= d.thankYou

  .contact__wrap
    p!= d.intro

    form.contact(name="contact", action=`/${lang}/contact#thank-you`, netlify, netlify-honeypot="yum")
      fieldset.contact__inner
        .contact__info
          label.contact__label(for="name")= d.form.name
          input#name.contact__field(name="name", type="text", required)
        .contact__info
          label.contact__label(for="email")= d.form.email
          input#email.contact__field(name="email", type="email", required)
        .contact__info.contact__info--yum
          label.contact__label(for="yum")= d.form.yum
          input#yum.contact__field(name="yum", type="text", tabindex="-1")
        .contact__info
          label.contact__label(for="message")= d.form.message
          textarea#message.contact__field.contact__field--area(name="message", rows="5", required)
      .contact__submit.button
        button.button__link= d.form.send
