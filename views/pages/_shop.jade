extends ../layout

block content
  
  section
    h2 Studio albums
    section
      div
        img(src='/images/covers/kenotic.jpg', width="280" height="280" alt="")
      div
        h3 Kenotic
        ul
          li Digipack
          li 68 minutes
          li 16-page booklet
        div
          p: strong Buy the CD on:
          .button
            a.button__link(href="http://shop.season-of-mist.com/benighted-soul-kenotic-cd-digipack") Season of Mist
            a.button__link(href="http://musique.fnac.com/a7874186/Benighted-Soul-Kenotic-CD-album") fnac
            a.button__link(href="http://www.amazon.fr/dp/B00P1ECAO4") Amazon
        div
          p: strong Download it from:
          .button
            a.button__link(href="https://itunes.apple.com/us/album/kenotic/id929600908") iTunes
            a.button__link(href="http://www.amazon.fr/dp/B00OLRCUU6") Amazon
    section
      div
        img(src='/images/covers/start-from-scratch.jpg', width="280" height="280" alt="")
      div
        h3 Start from Scratch
        ul
          li Cristal jewel case
          li 70 minutes
          li 16-page booklet
        div
          p: strong Buy the CD on:
          .button
            a.button__link(href="http://shop.season-of-mist.com/benighted-soul-start-from-scratch-cd") Season of Mist
