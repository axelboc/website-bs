extends ../../layout

block content
  - var disco = data.discography
  
  section.albums
    h2= d.headings.albums
    ol.albums__list
      each album in disco.albums
        - var albumData = disco[album]
        li.album
          a.album__link-cover(href=page.path + '/' + album)
            img.album__cover(src='/images/covers/' + album + '.jpg', width="350" height="350" alt="")
          div.album__content
            h3.album__heading
              a.album__link(href=page.path + '/' + album)= albumData[lang].title
            p= albumData.year
  
  section
    h2= d.headings.other
    ol
      each release in disco.otherReleases
        - var releaseData = disco[release]
        li
          a(href=page.path + '/' + release)
            img(src='/images/covers/' + release + '.jpg', width="200" height="200" alt="")
            p
              strong= releaseData[lang].title
              |  
              span= releaseData.year
              |  
              span= disco[lang].releaseTypes[releaseData.type]
    
    